@model IEnumerable<tiendaVirtual.Producto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-success" href="@Url.Action("Create", "Productos" )">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.cantidad)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombre)
        </td>
        <td>
            <img src="@item.imagen" class="img-rounded" height="100"/>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.precio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            <a class="btn btn-info" href="@Url.Action("Edit", "Productos",  new { id=item.id } )">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            <a class="btn btn-default" href="@Url.Action("Details", "Productos",  new { id=item.id } )">
                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
            </a>
            <a class="btn btn-danger" href="@Url.Action("Delete", "Productos",  new { id=item.id } )">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            </a>
        </td>
    </tr>
}

</table>
